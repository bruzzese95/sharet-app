<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/shared_resource_fragment">

    <fragment
        android:id="@+id/shared_resource_fragment"
        android:name="com.example.sharet.sharedresource.SharedResourceFragment"
        android:label="fragment_shared_resource"
        tools:layout="@layout/fragment_shared_resource" >
        <action
            android:id="@+id/action_sharedResourceFragment_to_customDialogFragment"
            app:destination="@id/custom_dialog" />
        <action
            android:id="@+id/action_shared_resource_fragment_to_sharedResourceDetailFragment"
            app:destination="@id/sharedResourceDetailFragment" />
    </fragment>
    <dialog
        android:id="@+id/custom_dialog"
        android:name="com.example.sharet.customdialog.CustomDialogFragment"
        android:label="CustomDialog" >
        <action
            android:id="@+id/action_customDialog_to_sharedResourceFragment"
            app:destination="@id/shared_resource_fragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/shared_resource_fragment"
            app:popUpToInclusive="true" />
    </dialog>
    <fragment
        android:id="@+id/sharedResourceDetailFragment"
        android:name="com.example.sharet.sharedresourcedetail.SharedResourceDetailFragment"
        android:label="SharedResourceDetailFragment" >
        <action
            android:id="@+id/action_sharedResourceDetailFragment_to_shared_resource_fragment"
            app:destination="@id/shared_resource_fragment" />
        <argument
            android:name="sharedResourceKey"
            app:argType="long" />
    </fragment>
</navigation>